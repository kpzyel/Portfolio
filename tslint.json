{
  "extends": ["tslint:recommended"],
  "rules": {
    "quotemark": [true, "single"],
    "align": [true, "parameters", "statements"],
    "no-trailing-whitespace": true,
    "no-consecutive-blank-lines": true,
    "max-line-length": {
      "options": [120]
    },
    "no-console": false,
    "jsdoc-format": false
  },
  "jsRules": {
    "max-line-length": {
      "options": [120]
    }
  }
}